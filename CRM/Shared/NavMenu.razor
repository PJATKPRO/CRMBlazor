            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CRM/Flows">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Flows
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CRM/Clients">
                <span class="oi oi-person" aria-hidden="true"></span> Clients
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CRM/Companies">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Companies
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CRM/Products">
                <span class="oi oi-cart" aria-hidden="true"></span> Products
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
